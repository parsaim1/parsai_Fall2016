	public static void sandwich(String str) {
		if (str.toLowerCase().indexOf("bread") == -1) { //test to see if bread even exists.
			System.out.println("You need bread to make a sandwich");
		} 
		if (str.toLowerCase().indexOf("bread", str.length()-4) != str.length() - 5 || str.toLowerCase().indexOf("bread", 0) != 0) { //tests to makes sure the sandwich begins and ends with bread
			System.out.println("In order to have a complete sandwich, you need to have a piece of bread at both ends of the sandwich.");
		} else {
			String afterOuterBread = str.substring(5, str.length() - 5);
			String[] afterSpaces = afterOuterBread.split(" ");
			String listOfIngredients = ""; 
			for (String ingredient : afterSpaces) {
				listOfIngredients = listOfIngredients + ingredient; 
			}
			String[] afterInnerBread = listOfIngredients.split("bread");
			int numbOfBread = 1;
			for (String filling : afterInnerBread) {
				System.out.println("The ingredients between bread slices " + numbOfBread + " and " + (numbOfBread +1) + " are " + filling);
				numbOfBread++;
			}
		}
	}
}
			
