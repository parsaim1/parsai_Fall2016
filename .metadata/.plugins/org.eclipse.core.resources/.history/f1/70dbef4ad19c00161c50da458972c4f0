	public static void sandwich(String str, String keyWord) {
		//System.out.println(Arrays.toString(str.split(keyWord)));
		if (str.toLowerCase().indexOf("bread") == -1) {
			System.out.println("You need bread to make a sandwich");
		} 
		if (str.toLowerCase().indexOf("bread", str.length()-8) != str.length() - 5 || str.toLowerCase().indexOf("bread", 0) != 0) {
			System.out.println("In order to have a complete sandwich, you need to have a piece of bread at both ends of the sandwich.");
		} else {
			String afterOuterBreads = str.substring(5, str.length() - 5);
			String[] afterInnerBread = afterOuterBreads.split(keyWord);
			int numbOfBread = 1;
			for (String filling : afterInnerBread) {
				System.out.println("The ingredients between slices " + numbOfBread + " and " + (numbOfBread +1) + " of the bread are " + filling);
				numbOfBread++;
			}
		}
	}
}
		
